{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
              "ignoreAtRules": [
                "tailwind",
                "apply",
                "variants",
                "responsive",
                "screen"
              ]
            }
        ],
        "declaration-no-important": true,
        "no-duplicate-selectors": true,
        "no-empty-source": true, 
        "font-family-name-quotes": null
    }
  }
  